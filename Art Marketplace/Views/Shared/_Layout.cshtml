
<!DOCTYPE html>
<html>
<head>
    <title>Art Marketplace: @ViewBag.Title</title>
    <link href="~/css/index.css" rel="stylesheet" />
</head>
<body>
    <header>
        <h1>Welcome to the Art Marketplace</h1>
    </header>
    <menu>
        <ul>
            <li><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>

        </ul>
    </menu>
    <section>
        <h2>@ViewBag.Title</h2>
        @RenderBody()
    </section>
    <footer>Copyright 2019 Nunnya Business LLC</footer>
    

    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/js/index.js"></script>

    @RenderSection("scripts", false) 
    <!-- allows you to selectively load scripts based if the view has the scripts section -->
</body>
</html>